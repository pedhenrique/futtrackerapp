<resources>

     <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo">
        
        <!-- Action Bar -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>

        <!-- Window -->
        <item name="android:windowBackground">@color/background_azul</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    
    
    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>
        <item name="android:background">@color/branco</item>
    </style>
    
   <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/backgroud_actionbar</item>
    </style>
    
    <!-- ActionBar Subtitle text -->
    <style name="MyActionBarSubTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/backgroud_actionbar</item>
    </style>
    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:textStyle">@style/MyActionBarTabText</item>
        <item name="android:background">@color/backgroud_actionbar</item>
<!--         <item name="android:textAllCaps" >true</item> -->
    </style>
    
    <!-- ActionBar Tab text -->
    <style name="MyActionBarTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/backgroud_actionbar</item>
<!--         <item name="android:textAllCaps">true</item> -->
    </style>
 

</resources>
